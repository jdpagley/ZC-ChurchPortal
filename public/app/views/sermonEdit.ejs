<h1 class="zion-connect-page-header">Edit Sermon</h1>
<!--sermon edit container-->
<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
    <!--update successful-->
    <div class="zion-connect-success-message" data-ng-show="sermonEditedSuccessfully">
        <span><span class="glyphicon glyphicon-ok"></span> <strong>SERMON UPDATED</strong></span><!--update successful paragraph-->
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update successful x icon-->
    </div>
    <!--update failed error-->
    <div class="zion-connect-failure-message" data-ng-show="sermonEditFailure = true;">
        <span><span class="glyphicon glyphicon-asterisk"></span> <strong>UPDATE FAILURE. PLEASE TRY AGAIN LATER</strong></span><!--update failed error paragraph-->
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update failed error x icon-->
    </div>
    <!--Deletion successful-->
    <div class="zion-connect-success-message" data-ng-show="sermonDeletedSuccessfully">
        <span><span class="glyphicon glyphicon-ok"></span> <strong>SERMON DELETED</strong></span><!--update successful paragraph-->
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update successful x icon-->
    </div>
    <!--deletion failure-->
    <div class="zion-connect-failure-message" data-ng-show="sermonDeletionFailure">
        <span><span class="glyphicon glyphicon-asterisk"></span> <strong>SERMON DELETION FAILURE. PLEASE TRY AGAIN LATER</strong></span><!--update failed error paragraph-->
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update failed error x icon-->
    </div>
    <div class="col-lg-12 col-md-12 sermon-add-edit">
        <form>
            <div class="col-lg-8 col-md-8">
                <!--edit sermon info-->
                <div class="col-lg-12 col-md-12 sermon-info-area">
                    <h2>Sermon Info</h2>
                    <!--step 2 sermon title-->
                    <div class="form-group">
                        <label class="control-label" for="sermonTitle">Title</label>
                        <input type="text" class="form-control" id="sermonTitle" name="sermonTitle" ng-model="sermonObject.title"/>
                    </div>
                    <!--step 2 sermon speaker-->
                    <div class="form-group">
                        <label class="control-label" for="sermonSpeaker">Speaker</label>
                        <input type="text" class="form-control" id="sermonSpeaker" name="sermonSpeaker" data-ng-model="sermonObject.speaker"/>
                    </div>
                    <!--step 2 sermon part dropdown-->
                    <div class="form-group">
                        <label class="control-label" for="sermonPart">Part</label>
                        <select class="form-control" id="sermonPart" name="sermonPart" data-ng-model="sermonObject.part">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
