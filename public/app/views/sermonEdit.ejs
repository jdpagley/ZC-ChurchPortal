                            <option>16</option>
                            <option>17</option>
                            <option>18</option>
                            <option>19</option>
                            <option>20</option>
                            <option>21</option>
                            <option>22</option>
                            <option>23</option>
                            <option>24</option>
                            <option>25</option>
                            <option>26</option>
                            <option>27</option>
                            <option>28</option>
                            <option>29</option>
                            <option>30</option>
                            <option>31</option>
                            <option>32</option>
                            <option>33</option>
                            <option>34</option>
                            <option>35</option>
                            <option>36</option>
                            <option>37</option>
                            <option>38</option>
                            <option>39</option>
                            <option>40</option>
                            <option>41</option>
                            <option>42</option>
                            <option>43</option>
                            <option>44</option>
                            <option>45</option>
                            <option>46</option>
                            <option>47</option>
                            <option>48</option>
                            <option>49</option>
                            <option>50</option>
                        </select>
                    </div>
                    <!--step 2 sermon tags-->
                    <div class="form-group">
                        <label class="control-label" for="sermonTags">Tags</label>
                        <input type="text" class="form-control" id="sermonTags" name="sermonTags" data-ng-model="sermonObject.tags"/>
                        <p class="text-muted font-11">Separate each tag with a comma (grave, risen, easter)</p>
                    </div>
                </div>
                <!--edit sermon content-->
                <div class="col-lg-12 col-md-12 sermon-info-area">
                    <h2>Sermon Content</h2>
                    <!--step 3 sermon audio-->
                    <div class="form-group">
                        <div class="col-lg-5 col-md-5">
                            <input type="text" class="form-control" name="sermonAudio" id="sermonAudio" name="sermonAudio" data-ng-model="sermonObject.content.audio"/>
                        </div>
                        <div class="col-lg-3 col-md-3 right-button"><a href="" class="btn btn-grey btn-block">Change Audio</a></div>
                    </div>
                    <!--step 3 sermon video-->
                    <div class="form-group">
                        <div class="col-lg-5 col-md-5">
                            <input type="text" class="form-control" name="sermonVideo" id="sermonVideo" data-ng-model="sermonObject.content.video"/>
                        </div>
                        <div class="col-lg-3 col-md-3 right-button"><a href="" class="btn btn-grey btn-block">Change Video</a></div>
                    </div>
                    <!--step 3 sermon message notes-->
                    <div class="form-group">
                        <div class="col-lg-12 col-md-12">
                            <label class="control-label" for="messageNotes">Message Notes</label>
                            <textarea class="form-control" name="messageNotes" rows="20" cols="100%" data-ng-model="sermonObject.content.notes"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <!--delete sermon container-->
                        <div class="col-lg-7 col-md-7 single-settings-form">
                            <a href="" class="text-danger" ng-click="displayDeleteSermonConfirmationPopup = true;"><span class="glyphicon glyphicon-trash"></span> Delete Sermon</a><!--delete sermon link-->
                        </div>
                        <!--step 3 sermon update button-->
                        <div class="col-lg-5 col-md-5"><a href="" class="btn btn-md btn-purple pull-right" ng-click="updateSermon(sermonObject)">Update</a></div>
                    </div>
                </div>
                <!--Delete sermon confirmation popup-->
                <div class="panel panel-default zion-connect-popup" ng-show="displayDeleteSermonConfirmationPopup">
                    <div class="panel-heading">
                        <h3 class="panel-title"><span class="glyphicon glyphicon-trash"></span> Delete Sermon</h3>
                    </div>
                    <div class="panel-body">
                        <p>Are you sure you want to delete this sermon?</p>
                        <br/>
                        <button type="button" class="btn btn-success btn-sm" data-ng-click="deleteSermon(); displayDeleteSermonConfirmationPopup = false;"> Yes</button>
                        <button type="button" class="btn btn-danger btn-sm" data-ng-click="displayDeleteSermonConfirmationPopup = false;">No</button>
                    </div>
                </div>

            </div>

        </form>
    </div>
